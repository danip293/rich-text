{
  "plugins": ["react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": ["prettier", "prettier/react"],
  "rules": {
    "semi": [2, "always"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    // "no-extra-parens": "war",
    "max-len": ["error", { "code": 100 }],
    "no-multi-spaces": "error"
  },
  "settings": {
    "react": {
      "version": "16.3"
    }
  }
}
